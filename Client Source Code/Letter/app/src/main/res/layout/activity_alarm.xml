
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <ImageView
            android:background="#000000"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_marginLeft="21.8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"
            android:onClick="back"
            android:text="alarmback"
            android:id="@+id/alarmback" />

        <TextView
            android:layout_width="76.3dp"
            android:layout_height="23dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="20dp"
            android:text="알림 설정"
            android:textColor="#ffffff"
            android:textSize="18dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="360dp"
        android:layout_height="0.8dp"

        android:textSize="0.3dp"
        android:layout_marginTop="18.8dp"
        android:background="#ffffff"

        />


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="95.3dp"
            android:layout_height="21dp"
            android:layout_marginLeft="28.8dp"
            android:layout_marginTop="28dp"
            android:text="알림 받기"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="21dp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="26.5dp"
            android:id="@+id/alarmTV"
            android:text="받음"
            android:textColor="#ffffff"
            android:textSize="9sp"
            />


        <Switch
            android:id="@+id/switch1"
            android:layout_width="49dp"
            android:layout_height="11.2dp"
            android:layout_marginLeft="4.7dp"
            android:layout_marginTop="28dp"

            android:textOn="on"
            android:textOff="off"/>


    </LinearLayout>


       <TextView
           android:layout_width="250.5dp"
           android:layout_height="13dp"
           android:layout_marginTop="16.2dp"
           android:layout_marginLeft="31.5dp"
           android:text=""
           android:textSize="9sp"
           android:textColor="#808080"
           />



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="132.8dp"
            android:layout_height="21dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="30.3dp"
            android:text="무음으로 알림 받기"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />


        <Switch
            android:id="@+id/switch2"
            android:layout_width="49dp"
            android:layout_height="11.2dp"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="28dp"
            android:textOn="on"
            android:textOff="off"/>

    </LinearLayout>


</LinearLayout>