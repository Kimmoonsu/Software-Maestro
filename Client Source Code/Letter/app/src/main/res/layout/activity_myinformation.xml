
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <ImageView
            android:background="#000000"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_marginLeft="21.8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"
            android:onClick="back"
            android:text="alarmback"
            android:id="@+id/alarmback" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="98.8dp"
            android:layout_marginTop="20dp"
            android:text="사용자 정보"
            android:textColor="#ffffff"
            android:textSize="25sp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="360dp"
        android:layout_height="0.8dp"

        android:textSize="0.3dp"
        android:layout_marginTop="18.8dp"
        android:background="#ffffff"

        />


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="120.3dp"
            android:layout_height="30dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="28dp"
            android:text="설치 시간 :"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/installtime"
            android:layout_width="200.3dp"
            android:layout_height="25dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="00 : 00 : 00"
            android:textColor="#808080"
            android:textSize="15dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="120.3dp"
            android:layout_height="30dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="48dp"
            android:text="접속 시간 :"

            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/accesstime"
            android:layout_width="200.3dp"
            android:layout_height="25dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="48dp"
            android:text="00 : 00 : 00"
            android:textColor="#808080"
            android:textSize="15dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="120.3dp"
            android:layout_height="30dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="48dp"
            android:text="종료 시간 :"

            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/closetime"
            android:layout_width="200.3dp"
            android:layout_height="25dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="48dp"
            android:text="00 : 00 : 00"
            android:textColor="#808080"
            android:textSize="15dp"
            />
    </LinearLayout>
</LinearLayout>