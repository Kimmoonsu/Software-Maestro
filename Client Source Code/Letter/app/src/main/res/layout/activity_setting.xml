<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:background="#000000"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_marginLeft="21.8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"
            android:onClick="back"
            android:text="back"
            android:id="@+id/back" />


        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="127.8dp"

            android:layout_marginTop="20dp"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="25dp"
            />





    </LinearLayout>

    <TextView
        android:layout_width="360dp"
        android:layout_height="0.8dp"

        android:textSize="0.3dp"
        android:layout_marginTop="18.8dp"
        android:background="#dcd8d8"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="99.3dp"
            android:layout_height="25dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="28dp"
            android:text="알림 설정"
            android:onClick="alarm"
            android:id="@+id/alarm"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="99.3dp"
            android:layout_height="25dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="28dp"
            android:text="알림 받음"
            android:id="@+id/alarmtext"
            android:textColor="#808080"
            android:textSize="20dp"
            />

    </LinearLayout>



    <TextView
        android:layout_width="99.3dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28dp"
        android:text="초대 하기"
        android:id="@+id/invite"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:textSize="0.3dp"
        android:layout_marginTop="25.9dp"
        android:background="#dcd8d8"

        />
    <TextView
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28dp"
        android:text="편지 발신함"
        android:id="@+id/sendBox"
        android:textColor="#ffffff"
        android:textSize="20dp" />



    <TextView
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28dp"
        android:text="편지 수신함"
        android:id="@+id/reciveBox"
        android:textColor="#ffffff"
        android:textSize="20dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:textSize="0.3dp"
        android:layout_marginTop="25.9dp"
        android:background="#dcd8d8"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="99.3dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28.3dp"
        android:text="공지사항"
        android:id="@+id/notice"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="100.3dp"
            android:layout_height="25dp"
            android:paddingLeft="28.8dp"
            android:layout_marginTop="28dp"
            android:text="버전 정보"
            android:id="@+id/version"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="200.3dp"
            android:layout_height="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="28dp"
            android:text="최신버전입니다."
            android:textColor="#808080"
            android:textSize="20dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="118.3dp"
        android:layout_height="20.5dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="2.8dp"
        android:text="ver 1.0.0"
        android:textColor="#808080"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="99.3dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28dp"
        android:text="개발자 정보"
        android:id="@+id/information"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />


    <TextView
        android:layout_width="99.3dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28.8dp"
        android:layout_marginTop="28dp"
        android:text="사용자 정보"
        android:id="@+id/myinformation"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />



</LinearLayout>