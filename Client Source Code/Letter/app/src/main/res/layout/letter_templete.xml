<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To. "
        android:padding="20dp"
        android:id="@+id/tem_to" />


    <TextView
        android:background="@drawable/a_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollbars="vertical"
        android:text=""
        android:padding="20dp"
        android:layout_margin="5dp"
        android:id="@+id/tem_context" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2016.07.21"
        android:padding="20dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:id="@+id/tem_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From. "
        android:padding="20dp"
        android:id="@+id/tem_from" />

    <Button
        android:background="@drawable/a_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="close"
        android:id="@+id/tem_close" />
</LinearLayout>
